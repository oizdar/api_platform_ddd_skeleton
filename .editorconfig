root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4
ij_php_space_after_type_cast = true
ij_php_spaces_around_pipe_in_union_type = true
ij_php_concat_spaces = false

[*.y?ml]
indent_style = space
indent_size = 2

[composer.json]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80
